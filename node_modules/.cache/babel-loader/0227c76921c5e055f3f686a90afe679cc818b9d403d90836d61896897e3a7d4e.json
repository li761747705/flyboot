{"ast":null,"code":"import NavBar from './components/NavBar.vue';\nimport AppFooter from './components/Footer.vue';\nimport { computed, watch } from 'vue';\nimport { useI18n } from 'vue-i18n';\nexport default {\n  __name: 'App',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const {\n      locale\n    } = useI18n();\n\n    // 检查当前语言是否是从右到左的语言\n    const isRTL = computed(() => {\n      return locale.value === 'ar';\n    });\n\n    // 监听语言变化，设置文档方向\n    watch(locale, newLocale => {\n      if (newLocale === 'ar') {\n        document.documentElement.setAttribute('dir', 'rtl');\n        document.documentElement.classList.add('rtl');\n      } else {\n        document.documentElement.setAttribute('dir', 'ltr');\n        document.documentElement.classList.remove('rtl');\n      }\n    });\n    const __returned__ = {\n      locale,\n      isRTL,\n      NavBar,\n      AppFooter,\n      computed,\n      watch,\n      get useI18n() {\n        return useI18n;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["NavBar","AppFooter","computed","watch","useI18n","locale","isRTL","value","newLocale","document","documentElement","setAttribute","classList","add","remove"],"sources":["C:/Users/Administrator/Desktop/flyboot/src/App.vue"],"sourcesContent":["<template>\n  <div id=\"app\" :class=\"{ 'rtl': isRTL }\">\n    <NavBar />\n    <main class=\"main-content\">\n      <router-view />\n    </main>\n    <AppFooter />\n  </div>\n</template>\n\n<script setup>\nimport NavBar from './components/NavBar.vue'\nimport AppFooter from './components/Footer.vue'\nimport { computed, watch } from 'vue'\nimport { useI18n } from 'vue-i18n'\n\nconst { locale } = useI18n()\n\n// 检查当前语言是否是从右到左的语言\nconst isRTL = computed(() => {\n  return locale.value === 'ar'\n})\n\n// 监听语言变化，设置文档方向\nwatch(locale, (newLocale) => {\n  if (newLocale === 'ar') {\n    document.documentElement.setAttribute('dir', 'rtl')\n    document.documentElement.classList.add('rtl')\n  } else {\n    document.documentElement.setAttribute('dir', 'ltr')\n    document.documentElement.classList.remove('rtl')\n  }\n})\n</script>\n\n<style>\n:root {\n  --primary-color: #2D0A81;\n  --secondary-color: #1e90ff;\n  --accent-color: #8624FA;\n  --dark-color: #1a1a1a;\n  --light-color: #f8f9fa;\n  --text-color: #333333;\n}\n\nbody {\n  font-family: 'Microsoft YaHei', Arial, sans-serif;\n  -webkit-font-smoothing: antialiased;\n  -moz-osx-font-smoothing: grayscale;\n  color: var(--text-color);\n  overflow-x: hidden;\n}\n\n#app {\n  font-family: 'Microsoft YaHei', Arial, sans-serif;\n  -webkit-font-smoothing: antialiased;\n  -moz-osx-font-smoothing: grayscale;\n  color: var(--text-color);\n}\n\n/* RTL样式支持 */\n#app.rtl {\n  direction: rtl;\n  text-align: right;\n}\n\n#app.rtl .dropdown-menu {\n  text-align: right;\n}\n\n#app.rtl .me-2, #app.rtl .me-3 {\n  margin-right: 0 !important;\n  margin-left: 0.5rem !important;\n}\n\n#app.rtl .ms-1, #app.rtl .ms-2, #app.rtl .ms-3 {\n  margin-left: 0 !important;\n  margin-right: 0.25rem !important;\n}\n\n.main-content {\n  padding-top: 68px;\n  min-height: calc(100vh - 300px);\n}\n\n.navbar {\n  font-family: 'Microsoft YaHei', Arial, sans-serif;\n  font-size: 1.05rem;\n  letter-spacing: 0.5px;\n}\n\n.navbar-brand img {\n  height: 40px;\n}\n\n.nav-link {\n  color: white;\n  font-weight: 500;\n  padding: 0.8rem 1.2rem;\n  transition: color 0.2s;\n}\n\n.nav-link.active, .nav-link:hover {\n  color: white;\n  border-bottom: 2px solid white;\n  background: none;\n}\n\n.dropdown-menu.mega-menu {\n  min-width: 600px;\n  left: 0;\n  right: 0;\n  margin: 0 auto;\n  border-radius: 0.5rem;\n  box-shadow: 0 4px 24px rgba(0,0,0,0.08);\n  border: none;\n}\n\n.dropdown-item {\n  font-size: 1rem;\n  padding: 0.5rem 1rem;\n  color: #333;\n  border-radius: 0.25rem;\n  transition: background 0.2s, color 0.2s;\n}\n\n.dropdown-item:hover {\n  background: #f1f3f6;\n  color: var(--primary-color);\n}\n\n.dropdown-menu .fw-bold {\n  color: var(--primary-color);\n}\n\n.btn-primary {\n  background-color: var(--primary-color);\n  border-color: var(--primary-color);\n}\n\n.btn-primary:hover, .btn-primary:focus {\n  background-color: #240970;\n  border-color: #240970;\n}\n\n.btn-outline-primary {\n  color: var(--primary-color);\n  border-color: var(--primary-color);\n}\n\n.btn-outline-primary:hover {\n  background-color: var(--primary-color);\n  color: white;\n}\n\n/* 多语言字体支持 */\n[lang=\"ar\"] {\n  font-family: 'Noto Sans Arabic', 'Arial', sans-serif;\n}\n\n[lang=\"hi\"], [lang=\"bn\"] {\n  font-family: 'Noto Sans', 'Arial', sans-serif;\n}\n\n[lang=\"ru\"] {\n  font-family: 'Noto Sans', 'Arial', sans-serif;\n}\n\n[lang=\"zh\"], [lang=\"zh-hk\"] {\n  font-family: 'Microsoft YaHei', 'SimSun', 'Noto Sans SC', sans-serif;\n}\n\nfooter {\n  background-color: var(--dark-color);\n}\n\n.social-links a {\n  font-size: 1.5rem;\n  transition: color 0.3s ease;\n}\n\n.social-links a:hover {\n  color: var(--secondary-color) !important;\n}\n\n.gradient-text {\n  background: linear-gradient(90deg, #4287FF 0%, #8624FA 100%);\n  -webkit-background-clip: text;\n  -webkit-text-fill-color: transparent;\n  background-clip: text;\n  text-fill-color: transparent;\n}\n</style>\n"],"mappings":"AAWA,OAAOA,MAAM,MAAM,yBAAwB;AAC3C,OAAOC,SAAS,MAAM,yBAAwB;AAC9C,SAASC,QAAQ,EAAEC,KAAK,QAAQ,KAAI;AACpC,SAASC,OAAO,QAAQ,UAAS;;;;;;;IAEjC,MAAM;MAAEC;IAAO,CAAC,GAAGD,OAAO,CAAC;;IAE3B;IACA,MAAME,KAAK,GAAGJ,QAAQ,CAAC,MAAM;MAC3B,OAAOG,MAAM,CAACE,KAAK,KAAK,IAAG;IAC7B,CAAC;;IAED;IACAJ,KAAK,CAACE,MAAM,EAAGG,SAAS,IAAK;MAC3B,IAAIA,SAAS,KAAK,IAAI,EAAE;QACtBC,QAAQ,CAACC,eAAe,CAACC,YAAY,CAAC,KAAK,EAAE,KAAK;QAClDF,QAAQ,CAACC,eAAe,CAACE,SAAS,CAACC,GAAG,CAAC,KAAK;MAC9C,CAAC,MAAM;QACLJ,QAAQ,CAACC,eAAe,CAACC,YAAY,CAAC,KAAK,EAAE,KAAK;QAClDF,QAAQ,CAACC,eAAe,CAACE,SAAS,CAACE,MAAM,CAAC,KAAK;MACjD;IACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","exte