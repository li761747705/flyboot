Img: '/images/products/helicopter/f200-structure.jpg',\n          basic: [['机身长度', '1.1 m', '最大起飞重量', '20 kg'], ['最大载重', '5 kg', '旋翼直径', '1.2 m'], ['机身材质', '高强度合金+碳纤维', '动力系统', '电动']],\n          tech: [['最大飞行速度', '85 km/h', '巡航速度', '60 km/h'], ['最大航程', '100 km', '最大飞行高度', '3500 m'], ['续航时间', '1 小时', '抗风能力', '5 级']]\n        }\n      },\n      current: null\n    };\n  },\n  created() {\n    const id = this.$route.params.id;\n    this.current = this.products[id] || this.products['heli-h1000'];\n  },\n  methods: {\n    goBack() {\n      this.$router.push('/products/helicopter');\n    }\n  },\n  mounted() {\n    if (typeof bootstrap !== 'undefined') {\n      const tabList = document.querySelectorAll('#productTabs button');\n      tabList.forEach(tab => {\n        new bootstrap.Tab(tab);\n      });\n    }\n  }\n};","map":{"version":3,"names":["name","data","products","banner","flyingImg","structureImg","basic","tech","current","created","id","$route","params","methods","goBack","$router","push","mounted","bootstrap","tabList","document","querySelectorAll","forEach","tab","Tab"],"sources":["C:\\Users\\75132\\Desktop\\flyboot\\flyboot\\src\\views\\products\\details\\HelicopterDetail.vue"],"sourcesContent":["<template>\r\n  <div class=\"drone-detail\">\r\n    <!-- 返回按钮 -->\r\n    <div class=\"back-btn-wrap container\">\r\n      <button class=\"btn btn-outline-secondary\" @click=\"goBack\">\r\n        <i class=\"bi bi-arrow-left\"></i> 返回\r\n      </button>\r\n    </div>\r\n\r\n    <!-- 顶部banner色块 -->\r\n    <section class=\"hero-section\">\r\n      <div class=\"container\">\r\n        <div class=\"hero-banner\">\r\n          <h1 class=\"section-title text-white\">{{ current.name }}</h1>\r\n        </div>\r\n      </div>\r\n    </section>\r\n\r\n    <!-- 产品详情 -->\r\n    <section class=\"product-details\">\r\n      <div class=\"container\">\r\n        <!-- 飞行性能展示 -->\r\n        <div class=\"content-section\">\r\n          <div class=\"row align-items-center\">\r\n            <div class=\"col-md-6\">\r\n              <img :src=\"current.flyingImg\" alt=\"飞行展示\" class=\"img-fluid content-image\" />\r\n            </div>\r\n            <div class=\"col-md-6\">\r\n              <div class=\"content-box\">\r\n                <h2 class=\"section-title\">飞行性能</h2>\r\n                <p class=\"section-text\">\r\n                  无人直升机具备大载荷、长航时和高可靠性，适合重载运输、空中吊装等场景。\r\n                </p>\r\n                <ul class=\"feature-list\">\r\n                  <li><i class=\"bi bi-check2-circle\"></i> 大载荷能力</li>\r\n                  <li><i class=\"bi bi-check2-circle\"></i> 长航时作业</li>\r\n                  <li><i class=\"bi bi-check2-circle\"></i> 高可靠性设计</li>\r\n                </ul>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- 高强结构展示 -->\r\n        <div class=\"content-section\">\r\n          <div class=\"row align-items-center flex-row-reverse\">\r\n            <div class=\"col-md-6\">\r\n              <img :src=\"current.structureImg\" alt=\"高强结构\" class=\"img-fluid content-image\" />\r\n            </div>\r\n            <div class=\"col-md-6\">\r\n              <div class=\"content-box\">\r\n                <h2 class=\"section-title\">高强结构</h2>\r\n                <p class=\"section-text\">\r\n                  采用高强度合金和碳纤维材料，机身坚固耐用，适应恶劣环境，保障飞行安全。\r\n                </p>\r\n                <ul class=\"feature-list\">\r\n                  <li><i class=\"bi bi-check2-circle\"></i> 高强度合金结构</li>\r\n                  <li><i class=\"bi bi-check2-circle\"></i> 碳纤维机身</li>\r\n                  <li><i class=\"bi bi-check2-circle\"></i> 耐用抗疲劳</li>\r\n                </ul>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- 产品参数标签页 -->\r\n        <div class=\"content-section specs-tabs\">\r\n          <div class=\"container\">\r\n            <ul class=\"nav nav-tabs\" id=\"productTabs\" role=\"tablist\">\r\n              <li class=\"nav-item\" role=