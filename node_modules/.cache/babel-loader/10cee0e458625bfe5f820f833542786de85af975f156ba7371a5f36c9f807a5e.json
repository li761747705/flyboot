{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.filter.js\";\nimport \"core-js/modules/es.iterator.find.js\";\nexport default {\n  name: 'System',\n  data() {\n    return {\n      selectedBoat: null,\n      activeFilter: 'all',\n      boats: [{\n        id: 'b01',\n        type: 'single',\n        name: 'WaterOne 单人智能船',\n        description: '便携式单人智能船艇，适用于个人休闲、钓鱼和短途水上活动',\n        image: '/images/products/boats/waterone/main.jpg',\n        gallery: ['/images/products/boats/waterone/detail-1.jpg', '/images/products/boats/waterone/detail-2.jpg', '/images/products/boats/waterone/detail-3.jpg'],\n        features: ['轻量化设计，便于携带和部署', '高强度复合材料船体，抗冲击性强', '智能遥控系统，操作简便', '自动返航功能，确保安全', '长效电池，持续工作4小时', '防水设计，防护等级IP67', '载重能力强，最大载重120kg', '配备安全漂浮装置'],\n        specifications: {\n          '船体材质': '碳纤维复合材料',\n          '尺寸': '长1.8m×宽0.8m×高0.4m',\n          '重量': '25kg',\n          '最大载重': '120kg',\n          '续航时间': '4小时',\n          '最大速度': '15km/h',\n          '通信距离': '1.5km',\n          '防护等级': 'IP67',\n          '工作温度': '-10℃ ~ 50℃',\n          '电池容量': '48V 40Ah'\n        },\n        applications: ['个人休闲', '水上钓鱼', '摄影取景', '短途运输'],\n        video: 'https://www.youtube.com/embed/dQw4w9WgXcQ'\n      }, {\n        id: 'b02',\n        type: 'sampling',\n        name: 'AquaTest 水质采样船',\n        description: '专业水质采样无人船，配备多种采样设备，适用于湖泊、河流等水域的水质监测',\n        image: '/images/products/boats/aquatest/main.jpg',\n        gallery: ['/images/products/boats/aquatest/detail-1.jpg', '/images/products/boats/aquatest/detail-2.jpg', '/images/products/boats/aquatest/detail-3.jpg'],\n        features: ['高精度多参数水质传感器', '自动采样系统，可收集多点样本', '数据实时传输，支持4G/5G网络', '远程控制与自主导航双模式', '高稳定性船体设计，适应各种水况', '太阳能辅助供电，延长工作时间', '便携式设计，一人即可操作部署', 'GPS定位与轨迹记录'],\n        specifications: {\n          '船体材质': '工程塑料+铝合金',\n          '尺寸': '长1.2m×宽0.7m×高0.5m',\n          '重量': '35kg',\n          '最大载重': '20kg',\n          '续航时间': '8小时',\n          '最大速度': '8km/h',\n          '通信距离': '5km',\n          '防护等级': 'IP68',\n          '工作温度': '-20℃ ~ 60℃',\n          '采样容量': '12个500ml样本'\n        },\n        applications: ['水质监测', '环境调查', '科学研究', '污染源追踪'],\n        video: 'https://www.youtube.com/embed/dQw4w9WgXcQ'\n      }, {\n        id: 'b03',\n        type: 'patrol',\n        name: 'SeaGuard 海上巡逻船',\n        description: '自主巡逻无人船，配备高清摄像头和声呐系统，适用于港口、海岸和敏感水域的监控任务',\n        image: '/images/products/boats/seaguard/main.jpg',\n        gallery: ['/images/products/boats/seaguard/detail-1.jpg', '/images/products/boats/seaguard/detail-2.jpg', '/images/products/boats/seaguard/detail-3.jpg'],\n        features: ['全天候自主巡逻能力', '高清摄像头和热成像系统', '水下声呐探测系统', '船体防撞设计，安全可靠', '自动避障和紧急停止功能', '多天续航，配备太阳能充电', '强大动力系统，适应复杂海况', '实时视频传输和指挥系统'],\n        specifications: {\n          '船体材质': '玻璃钢+铝合金',\n          '尺寸': '长4.5m×宽1.8m×高1.2m',\n          '重量': '380kg',\n          '最大载重': '150kg',\n          '续航时间': '48小时',\n          '最大速度': '45km/h',\n          '巡航速度': '15km/h',\n          '通信距离': '15km',\n          '防护等级': 'IP68',\n          '工作温度': '-30℃ ~ 70℃'\n        },\n        applications: ['海岸巡逻', '港口监控', '边境安保', '反走私监控', '海上救援'],\n        video: 'https://www.youtube.com/embed/dQw4w9WgXcQ'\n      }, {\n        id: 'b04',\n        type: 'firefighting',\n        name: 'FireBoat 消防救援船',\n        description: '专业消防无人船，配备高压水炮和灭火设备，适用于水上消防和应急救援任务',\n        image: '/images/products/boats/fireboat/main.jpg',\n        gallery: ['/images/products/boats/fireboat/detail-1.jpg', '/images/products/boats/fireboat/detail-2.jpg', '/images/products/boats/fireboat/detail-3.jpg'],\n        features: ['大流量高压消防水炮', '耐高温船体设计', '远程遥控操作系统', '热成像探测器，识别火源', '大容量水箱和泡沫箱', '强大动力系统，快速反应', '应急照明和警报系统', '自动返航和安全保护功能'],\n        specifications: {\n          '船体材质': '耐高温复合材料',\n          '尺寸': '长5.2m×宽2.2m×高1.5m',\n          '重量': '620kg',\n          '水炮流量': '1200L/min',\n          '水炮射程': '60m',\n          '水箱容量': '1000L',\n          '续航时间': '3小时',\n          '最大速度': '35km/h',\n          '通信距离': '3km',\n          '防护等级': 'IP67'\n        },\n        applications: ['海上消防', '港口消防', '水上救援', '灾害应急', '危险区域接近'],\n        video: 'https://www.youtube.com/embed/dQw4w9WgXcQ'\n      }]\n    };\n  },\n  computed: {\n    filteredBoats() {\n      if (this.activeFilter === 'all') {\n        return this.boats;\n      }\n      return this.boats.filter(boat => boat.type === this.activeFilter);\n    }\n  },\n  mounted() {\n    // 检查路由参数，判断是否需要显示特定产品\n    const id = this.$route.params.id;\n    if (id) {\n      const boat = this.boats.find(b => b.id === id);\n      if (boat) {\n        this.$nextTick(() => {\n          this.showDetails(boat);\n        });\n      }\n    }\n  },\n  methods: {\n    setFilter(filter) {\n      this.activeFilter = filter;\n    },\n    getMainSpecs(boat) {\n      // 根据产品类型获取关键参数\n      const specKeys = {\n        single: ['尺寸', '重量', '最大载重', '续航时间'],\n        sampling: ['采样容量', '续航时间', '通信距离', '防护等级'],\n        patrol: ['尺寸', '最大速度', '续航时间', '通信距离'],\n        firefighting: ['水炮流量', '水炮射程', '水箱容量', '最大速度']\n      };\n      const type = boat.type || 'single';\n      return specKeys[type] || Object.keys(boat.specifications).slice(0, 4);\n    },\n    getBadgeClass(type) {\n      const classes = {\n        single: 'bg-info',\n        sampling: 'bg-success',\n        patrol: 'bg-primary',\n        firefighting: 'bg-danger'\n      };\n      return classes[type] || 'bg-secondary';\n    },\n    getTypeName(type) {\n      const names = {\n        single: '单人船',\n        sampling: '采样船',\n        patrol: '巡逻船',\n        firefighting: '消防船'\n      };\n      return names[type] || '其他船艇';\n    },\n    showDetails(boat) {\n      this.selectedBoat = boat;\n      document.getElementById('boatModal').classList.add('show');\n      document.getElementById('boatModal').style.display = 'block';\n      document.body.classList.add('modal-open');\n      const modalBackdrop = document.createElement('div');\n      modalBackdrop.classList.add('modal-backdrop', 'fade', 'show');\n      document.body.appendChild(modalBackdrop);\n    },\n    closeModal() {\n      document.getElementById('boatModal').classList.remove('show');\n      document.getElementById('boatModal').style.display = 'none';\n      document.body.classList.remove('modal-open');\n      const backdrop = document.querySelector('.modal-backdrop');\n      if (backdrop) {\n        backdrop.remove();\n      }\n    }\n  }\n};","map":{"version":3,"names":["name","data","selectedBoat","activeFilter","boats","id","type","description","image","gallery","features","specifications","applications","video","computed","filteredBoats","filter","boat","mounted","$route","params","find","b","$nextTick","showDetails","methods","setFilter","getMainSpecs","specKeys","single","sampling","patrol","firefighting","Object","keys","slice","getBadgeClass","classes","getTypeName","names","document","getElementById","classList","add","style","display","body","modalBackdrop","createElement","appendChild","closeModal","remove","backdrop","querySelector"],"sources":["C:\\Users\\Administrator\\Desktop\\flyboot\\src\\views\\products\\System.vue"],"sourcesContent":["<template>\r\n  <div class=\"system-page py-5\">\r\n    <div class=\"container\">\r\n      <!-- 页面标题 -->\r\n      <div class=\"row mb-5\">\r\n        <div class=\"col-12 text-center\">\r\n          <h1 class=\"display-5 fw-bold mb-3\">智能船艇产品</h1>\r\n          <p class=\"lead text-secondary\">我们提供全系列无人船艇产品，适用于水质监测、海洋巡逻和应急救援等场景</p>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- 产品分类筛选 -->\r\n      <div class=\"row mb-4\">\r\n        <div class=\"col-12\">\r\n          <div class=\"category-filter d-flex flex-wrap justify-content-center gap-3\">\r\n            <button class=\"btn\" :class=\"activeFilter === 'all' ? 'btn-primary' : 'btn-outline-primary'\" @click=\"setFilter('all')\">\r\n              全部产品\r\n            </button>\r\n            <button class=\"btn\" :class=\"activeFilter === 'single' ? 'btn-primary' : 'btn-outline-primary'\" @click=\"setFilter('single')\">\r\n              <i class=\"bi bi-tsunami me-1\"></i>单人船\r\n            </button>\r\n            <button class=\"btn\" :class=\"activeFilter === 'sampling' ? 'btn-primary' : 'btn-outline-primary'\" @click=\"setFilter('sampling')\">\r\n              <i class=\"bi bi-droplet me-1\"></i>采样船\r\n            </button>\r\n            <button class=\"btn\" :class=\"activeFilter === 'patrol' ? 'btn-primary' : 'btn-outline-primary'\" @click=\"setFilter('patrol')\">\r\n              <i class=\"bi bi-shield me-1\"></i>巡逻船\r\n            </button>\r\n            <button class=\"btn\" :class=\"activeFilter === 'firefighting' ? 'btn-primary' : 'btn-outline-primary'\" @click=\"setFilter('firefighting')\">\r\n              <i class=\"bi bi-fire me-1\"></i>消防船\r\n            </button>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- 产品展示 -->\r\n      <div class=\"row g-4\">\r\n        <div class=\"col-12 col-md-6 col-lg-4\" v-for=\"boat in filteredBoats\" :key=\"boat.id\">\r\n          <div class=\"card h-100 product-card\">\r\n            <div class=\"product-image\">\r\n              <img :src=\"boat.image\" class=\"card-img-top\" :alt=\"boat.name\">\r\n              <div class=\"product-overlay\">\r\n                <button class=\"btn btn-light\" @click=\"showDetails(boat)\">查看详情</button>\r\n              </div>\r\n            </div>\r\n            <div class=\"card-body\">\r\n              <div class=\"product-badge\" :class=\"getBadgeClass(boat.type)\">\r\n                {{ getTypeName(boat.type) }}\r\n              </div>\r\n              <h5 class=\"card-title\">{{ boat.name }}</h5>\r\n              <p class=\"card-text\">{{ boat.description }}</p>\r\n              <div class=\"specs\">\r\n                <div class=\"specs-item\" v-for=\"(key, index) in getMainSpecs(boat)\" :key=\"index\">\r\n                  <span class=\"specs-label\">{{ key }}:</span>\r\n                  <span class=\"specs-value\">{{ boat.specifications[key] }}</span>\r\n                </div>\r\n              </div>\r\n            </div>\r\n            <div class=\"card-footer bg-white border-top-0\">\r\n              <div class=\"d-flex gap-2\">\r\n                <button class=\"btn btn-primary flex-grow-1\" @click=\"showDetails(boat)\">产品详情</button>\r\n                <button class=\"btn btn-outline-primary flex-grow-1\">获取报价</button>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 产品详情模态框 -->\r\n    <div class=\"modal fade\" id=\"boatModal\" tabindex=\"-1\">\r\n      <div class=\"modal-dialog modal-xl modal-dialog-scrollable\">\r\n        <div class=\"modal-content\">\r\n          <div class=\"modal-header\">\r\n            <h5 class=\"modal-title\">{{ selectedBoat ? selectedBoat.name : '' }}</h5>\r\n            <button type=\"button\" class=\"btn-close\" @click=\"closeModal\" aria-label=\"Close\"></button>\r\n          </div>\r\n          <div class=\"modal-body\" v-if=\"selectedBoat\">\r\n            <!-- 产品导航标签 -->\r\n            <ul class=\"nav nav-tabs mb-4\" id=\"productTab\" role=\"tablist\">\r\n              <li class=\"nav-item\" role=\"presentation\">\r\n                <button class=\"nav-link active\" id=\"overview-tab\" data-bs-toggle=\"tab\" data-bs-target=\"#overview\" type=\"button\" role=\"tab\">产品概述</button>\r\n              </li>\r\n              <li class=\"nav-item\" role=\"presentation\">\r\n                <button class=\"nav-link\" id=\"specs-tab\" data-bs-toggle=\"tab\" data-bs-target=\"#specs\" type=\"button\" role=\"tab\">技术参数</button>\r\n              </li>\r\n              <li class=\"nav-item\" role=\"presentation\">\r\n                <button class=\"nav-link\" id=\"features-tab\" data-bs-toggle=\"tab\" data-bs-target=\"#features\" type=\"button\" role=\"tab\">特点优势</button>\r\n              </li>\r\n              <li class=\"nav-item\" role=\"presentation\">\r\n                <button class=\"nav-link\" id=\"applications-tab\" data-bs-toggle=\"tab\" data-bs-target=\"#applications\" type=\"button\" role=\"tab\">应用场景</button>\r\n              </li>\r\n              <li class=\"nav-item\" role=\"presentation\" v-if=\"selectedBoat.video\">\r\n                <button class=\"nav-link\" id=\"video-tab\" data-bs-toggle=\"tab\" data-bs-target=\"#video\" type=\"button\" role=\"tab\">产品视频</button>\r\n              </li>\r\n            </ul>\r\n\r\n            <!-- 标签内容 -->\r\n            <div class=\"tab-content\" id=\"productTabContent\">\r\n              <!-- 产品概述 -->\r\n              <div class=\"tab-pane fade show active\" id=\"overview\" role=\"tabpanel\">\r\n                <div class=\"row\">\r\n                  <div class=\"col-lg-6\">\r\n                    <div class=\"product-gallery\">\r\n                      <div class=\"main-image mb-3\">\r\n                        <img :src=\"selectedBoat.image\" class=\"img-fluid rounded\" :alt=\"selectedBoat.name\">\r\n                      </div>\r\n                      <div class=\"row g-2\">\r\n                        <div class=\"col-3\" v-for=\"(img, index) in selectedBoat.gallery\" :key=\"index\">\r\n                          <img :src=\"img\" class=\"img-fluid rounded\" :alt=\"'产品图片 ' + (index + 1)\">\r\n                        </div>\r\n                      </div>\r\n                    </div>\r\n                  </div>\r\n                  <div class=\"col-lg-6\">\r\n                    <div class=\"product-badge mb-3\" :class=\"getBadgeClass(selectedBoat.type)\">\r\n                      {{ getTypeName(selectedBoat.type) }}\r\n                    </div>\r\n                    <h3 class=\"product-title mb-3\">{{ selectedBoat.name }}</h3>\r\n                    <p class=\"product-description mb-4\">{{ selectedBoat.description }}</p>\r\n                    \r\n                    <h5 class=\"mb-3\">主要特点</h5>\r\n                    <div class=\"row g-3 mb-4\">\r\n                      <div class=\"col-lg-6\" v-for=\"(feature, index) in selectedBoat.features.slice(0, 4)\" :key=\"index\">\r\n                        <div class=\"feature-item d-flex align-items-center\">\r\n                          <div class=\"feature-icon me-2 text-accent\">\r\n                            <i class=\"bi bi-check-circle-fill\"></i>\r\n                          </div>\r\n                          <div class=\"feature-text\">{{ feature }}</div>\r\n                        </div>\r\n                      </div>\r\n                    </div>\r\n                    \r\n                    <h5 class=\"mb-3\">关键参数</h5>\r\n                    <div class=\"row g-3\">\r\n                      <div class=\"col-6\" v-for=\"(key, index) in getMainSpecs(selectedBoat)\" :key=\"index\">\r\n                        <div class=\"spec-box p-3 rounded bg-light\">\r\n                          <div class=\"spec-title text-secondary small\">{{ key }}</div>\r\n                          <div class=\"spec-value fw-bold\">{{ selectedBoat.specifications[key] }}</div>\r\n                        </div>\r\n                      </div>\r\n                    </div>\r\n                  </div>\r\n                </div>\r\n              </div>\r\n\r\n              <!-- 其他标签内容与无人机产品页面类似，这里省略 -->\r\n\r\n            </div>\r\n          </div>\r\n          <div class=\"modal-footer\">\r\n            <div class=\"row w-100\">\r\n              <div class=\"col-lg-6 text-lg-start text-center mb-3 mb-lg-0\">\r\n                <a href=\"#\" class=\"btn btn-outline-secondary me-2\">下载产品手册</a>\r\n                <a href=\"#\" class=\"btn btn-outline-secondary\">产品参数表</a>\r\n              </div>\r\n              <div class=\"col-lg-6 text-lg-end text-center\">\r\n                <button type=\"button\" class=\"btn btn-secondary me-2\" @click=\"closeModal\">关闭</button>\r\n                <button type=\"button\" class=\"btn btn-primary\">获取报价</button>\r\n              </div>\r\n            </div>\r\n          </div>\r\n     