{"ast":null,"code":"import NavBar from './components/NavBar.vue';\nimport AppFooter from './components/Footer.vue';\nimport { useI18n } from 'vue-i18n';\nexport default {\n  name: 'App',\n  components: {\n    NavBar,\n    AppFooter\n  },\n  setup() {\n    const {\n      locale\n    } = useI18n();\n\n    // 监听语言变化，确保整个应用响应语言切换\n    const checkLanguage = () => {\n      const savedLocale = localStorage.getItem('locale') || 'zh-CN';\n      if (locale.value !== savedLocale) {\n        locale.value = savedLocale;\n      }\n\n      // 确保HTML标签有正确的lang属性\n      document.documentElement.setAttribute('lang', locale.value);\n\n      // 处理RTL语言\n      if (locale.value === 'ar') {\n        document.documentElement.setAttribute('dir', 'rtl');\n        document.body.classList.add('rtl');\n      } else {\n        document.documentElement.setAttribute('dir', 'ltr');\n        document.body.classList.remove('rtl');\n      }\n    };\n\n    // 初始检查\n    checkLanguage();\n    return {\n      locale\n    };\n  }\n};","map":{"version":3,"names":["NavBar","AppFooter","useI18n","name","components","setup","locale","checkLanguage","savedLocale","localStorage","getItem","value","document","documentElement","setAttribute","body","classList","add","remove"],"sources":["C:\\Users\\Administrator\\Desktop\\flyboot\\src\\App.vue"],"sourcesContent":["<template>\n  <div id=\"app\">\n    <NavBar />\n    <main class=\"main-content\">\n      <router-view />\n    </main>\n    <AppFooter />\n  </div>\n</template>\n\n<script>\nimport NavBar from './components/NavBar.vue'\nimport AppFooter from './components/Footer.vue'\nimport { useI18n } from 'vue-i18n'\n\nexport default {\n  name: 'App',\n  components: {\n    NavBar,\n    AppFooter\n  },\n  setup() {\n    const { locale } = useI18n()\n    \n    // 监听语言变化，确保整个应用响应语言切换\n    const checkLanguage = () => {\n      const savedLocale = localStorage.getItem('locale') || 'zh-CN'\n      if (locale.value !== savedLocale) {\n        locale.value = savedLocale\n      }\n      \n      // 确保HTML标签有正确的lang属性\n      document.documentElement.setAttribute('lang', locale.value)\n      \n      // 处理RTL语言\n      if (locale.value === 'ar') {\n        document.documentElement.setAttribute('dir', 'rtl')\n        document.body.classList.add('rtl')\n      } else {\n        document.documentElement.setAttribute('dir', 'ltr')\n        document.body.classList.remove('rtl')\n      }\n    }\n    \n    // 初始检查\n    checkLanguage()\n    \n    return {\n      locale\n    }\n  }\n}\n</script>\n\n<style>\n:root {\n  --primary-color: #2D0A81;\n  --secondary-color: #1e90ff;\n  --accent-color: #8624FA;\n  --dark-color: #1a1a1a;\n  --light-color: #f8f9fa;\n  --text-color: #333333;\n}\n\nbody {\n  font-family: 'Microsoft YaHei', Arial, sans-serif;\n  -webkit-font-smoothing: antialiased;\n  -moz-osx-font-smoothing: grayscale;\n  color: var(--text-color);\n  overflow-x: hidden;\n}\n\n#app {\n  font-family: 'Microsoft YaHei', Arial, sans-serif;\n  -webkit-font-smoothing: antialiased;\n  -moz-osx-font-smoothing: grayscale;\n  color: var(--text-color);\n}\n\n.main-content {\n  padding-top: 68px;\n  min-height: calc(100vh - 300px);\n}\n\n.navbar {\n  font-family: 'Microsoft YaHei', Arial, sans-serif;\n  font-size: 1.05rem;\n  letter-spacing: 0.5px;\n}\n\n.navbar-brand img {\n  height: 40px;\n}\n\n.nav-link {\n  color: white;\n  font-weight: 500;\n  padding: 0.8rem 1.2rem;\n  transition: color 0.2s;\n}\n\n.nav-link.active, .nav-link:hover {\n  color: white;\n  border-bottom: 2px solid white;\n  background: none;\n}\n\n.dropdown-menu.mega-menu {\n  min-width: 600px;\n  left: 0;\n  right: 0;\n  margin: 0 auto;\n  border-radius: 0.5rem;\n  box-shadow: 0 4px 24px rgba(0,0,0,0.08);\n  border: none;\n}\n\n.dropdown-item {\n  font-size: 1rem;\n  padding: 0.5rem 1rem;\n  color: #333;\n  border-radius: 0.25rem;\n  transition: background 0.2s, color 0.2s;\n}\n\n.dropdown-item:hover {\n  background: #f1f3f6;\n  color: var(--primary-color);\n}\n\n.dropdown-menu .fw-bold {\n  color: var(--primary-color);\n}\n\n.btn-primary {\n  background-color: var(--primary-color);\n  border-color: var(--primary-color);\n}\n\n.btn-primary:hover, .btn-primary:focus {\n  background-color: #240970;\n  border-color: #240970;\n}\n\n.btn-outline-primary {\n  color: var(--primary-color);\n  border-color: var(--primary-color);\n}\n\n.btn-outline-primary:hover, .btn-outline-primary:focus {\n  background-color: var(--primary-color);\n  color: white;\n}\n\n.text-primary {\n  color: var(--primary-color) !important;\n}\n\n.bg-primary {\n  background-color: var(--primary-color) !important;\n}\n\nfooter {\n  background-color: var(--dark-color);\n}\n\n.social-links a {\n  font-size: 1.5rem;\n  transition: color 0.3s ease;\n}\n\n.social-links a:hover {\n  color: var(--secondary-color) !important;\n}\n\n.gradient-text {\n  background: linear-gradient(90deg, #4287FF 0%, #8624FA 100%);\n  -webkit-background-clip: text;\n  -webkit-text-fill-color: transparent;\n  background-clip: text;\n  text-fill-color: transparent;\n}\n</style>\n"],"mappings":"AAWA,OAAOA,MAAK,MAAO,yBAAwB;AAC3C,OAAOC,SAAQ,MAAO,yBAAwB;AAC9C,SAASC,OAAM,QAAS,UAAS;AAEjC,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,UAAU,EAAE;IACVJ,MAAM;IACNC;EACF,CAAC;EACDI,KAAKA,CAAA,EAAG;IACN,MAAM;MAAEC;IAAO,IAAIJ,OAAO,CAAC;;IAE3B;IACA,MAAMK,aAAY,GAAIA,CAAA,KAAM;MAC1B,MAAMC,WAAU,GAAIC,YAAY,CAACC,OAAO,CAAC,QAAQ,KAAK,OAAM;MAC5D,IAAIJ,MAAM,CAACK,KAAI,KAAMH,WAAW,EAAE;QAChCF,MAAM,CAACK,KAAI,GAAIH,WAAU;MAC3B;;MAEA;MACAI,QAAQ,CAACC,eAAe,CAACC,YAAY,CAAC,MAAM,EAAER,MAAM,CAACK,KAAK;;MAE1D;MACA,IAAIL,MAAM,CAACK,KAAI,KAAM,IAAI,EAAE;QACzBC,QAAQ,CAACC,eAAe,CAACC,YAAY,CAAC,KAAK,EAAE,KAAK;QAClDF,QAAQ,CAACG,IAAI,CAACC,SAAS,CAACC,GAAG,CAAC,KAAK;MACnC,OAAO;QACLL,QAAQ,CAACC,eAAe,CAACC,YAAY,CAAC,KAAK,EAAE,KAAK;QAClDF,QAAQ,CAACG,IAAI,CAACC,SAAS,CAACE,MAAM,CAAC,KAAK;MACtC;IACF;;IAEA;IACAX,aAAa,CAAC;IAEd,OAAO;MACLD;IACF;EACF;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}