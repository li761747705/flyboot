n    <!-- 顶部 Banner -->\n    <div class=\"banner-img-wrapper\">\n     <img src=\"/images/applications/行业应用1900X700.png\" alt=\"行业应用\" class=\"banner-img\" />\n     <div class=\"banner-content\">\n       <h1>{{ currentTitle }}</h1>\n       <h3>{{ currentDesc }}</h3>\n     </div>\n   </div>\n  \n    <!-- 应用展示区 -->\n    <div class=\"applications-section\" v-if=\"$route.path === '/applications'\">\n      <div class=\"container mt-1\">\n      <h2 class=\"text-center mb-5 position-relative\">行业应用\n        <span class=\"section-line\"></span>\n      </h2>\n      <h3 class=\"text-center mb-1 position-relative\">\n        无人机在多个领域都有广泛的应用\n      </h3>\n    </div>\n      <div class=\"container\">\n        <div class=\"applications-grid-3\">\n          <div v-for=\"app in applications\" :key=\"app.id\" class=\"application-card\" @click=\"goToApplication(app.link)\"\n            :style=\"{ backgroundImage: 'url(' + app.image + ')' }\">\n            <div class=\"card-overlay\">\n              <h3>{{ app.title }}</h3>\n              <h6>{{ app.remake }}</h6>\n               <a :href=\"app.link\" class=\"btn btn-light rounded-pill px-4 mt-2\" @click.stop>更多</a>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n\n    <!-- 路由出口 -->\n    <router-view />\n  </div>\n</template>\n\n<script>\nexport default {\n  name: 'Applications',\n  data() {\n    return {\n      applications: [\n        {\n          id: 1,\n          title: '测绘',\n          path: 'mapping',\n          remake:'无人机测绘凭借高效快速的数据采集、高精度成果输出、灵活作业模式、成本效益显著以及强大的环境适应能力，已成为现代测绘领域的核心技术手段。',\n          image: '/images/applications/测绘400X620.png',\n          icon: '/images/applications/mapping.png',\n          link: '/applications/mapping',\n          desc: '测绘相关描述'\n        },\n        {\n          id: 2,\n          title: '水利',\n          path: 'inspection',\n          remake:'提高监测效率、增强监测精度、提升应急响应能力、降低成本和提高安全性等方面。',\n          image: '/images/applications/水利400X620.png',\n          icon: '/images/applications/inspection.png',\n          link: '/applications/inspection',\n          desc: '测绘相关描述'\n        },\n        {\n          id: 3,\n          title: '应急',\n          path: 'delivery',\n          remake:'无人机可突破地面交通限制，在复杂地形中快速抵达灾区，实时监测灾情并制定救援方案，缩短响应时间。',\n          image: '/images/applications/应急400X620.png',\n          icon: '/images/applications/delivery.png',\n          link: '/applications/delivery'\n        },\n        {\n          id: 4,\n          title: '交通',\n          path: 'aerial',\n          remake:'无人机航测技术在森林资源调查中的应用随着科技的不断发展，无人机航测技术逐渐应用于森林资源调查中，其高效、精准的特点在森林勘察中展现得淋漓尽致。',\n          image: '/images/applications/交通400X620.png',\n          icon: '/images/applications/aerial.png',\n          link: '/applications/aerial'\n        },\n        {\n          id: 5,\n          title: '环保',\n          path: 'spraying',\n          remake:'具备广域视野和快速机动能力，可实时监控交通状况，发现违规行为或拥堵情况后立即通过空中喊话提醒驾驶员，配合地面警力精准处置。',\n          image: '/images/applications/环保400X620.png',\n          icon: '/images/applications/spraying.png',\n          link: '/applications/spraying'\n        },\n        {\n          id: 6,\n          title: '森林勘察',\n          path: 'agriculture',\n          remake:'利用无人机搭载高清摄像设备、倾斜摄影测量技术等设备对电力线路、杆塔等元器件进行快速、高效的巡检。',\n          image: '/images/applications/森林400X620.png',\n          icon: '/images/applications/agriculture.png',\n          link: '/applications/agriculture'\n        },\n        {\n          id: 7,\n          title: '电力巡检',\n          path: 'firefighting',\n          remake:'无人机遥感系统可按需迅速查明环境现状，在建设项目环境保护管理、环境监测、环境监察、环境应急和生态保护等方面能够发挥极其重要的作用。',\n          image: '/images/applications/电力400X620.png',\n          icon: '/images/applications/firefighting.png',\n          link: '/applications/firefighting'\n        },\n        {\n          id: 8,\n          title: '农业应用',\n          path: 'farming',\n          remake:'无人机在农业领域的应用主要通过集成导航系统、传感器和自动化技术实现全流程智能化管理，主要涵盖植保作业、作物监测、精准施肥及收割等场景，显著提升农业生产效率并降低人力成本。',\n          image: '/images/applications/农业400X620.png',\n          icon: '/images/applications/farming.png',\n          link: '/applications/farming'\n        },\n        {\n          id: 9,\n          title: '运载应用',\n          path: 'powerline',\n          remake:'无人机运载具有高效、灵活、成本低等优势，特别适用于偏远地区、复杂地形和紧急情况下的物流和运输需求。',\n          image: '/images/applications/运载400X620.png',\n          icon: '/images/applications/powerline.png',\n          link: '/applications/powerline'\n        }\n      ]\n    }\n  },\n  methods: {\n    goToApplication(route) {\n      this.$router.push(route)\n    }\n  },\n  computed: {\n     currentTitle() {\n       const path = this.$route.path;\n       const match = path.match(/^\\/applications\\/(\\w+)/);\n       if (match) {\n         const found = this.applications.find(app => app.path === match[1]);\n         return found ? found.title : '行业应用';\n       }\n       return '行业应用';\n     },\n     currentDesc() {\n       const path = this.$route.path;\n       const match = path.match(/^\\/applications\\/(\\w+)/);\n       if (match) {\n         const found = this.applications.find(app => app.path === match[1]);\n         return found ? (found.remake || found.desc || '广泛应用于测绘与地理信息、巡检、安防监控、应急等领域的多种应用场景。') : '广泛应用于测绘与地理信息、巡检、安防监控、应急等领域的多种应用场景。';\n       }\n       return '广泛应用于测绘与地理信息、巡检、安防监控、应急等领域的多种应用场景。';\n     }\n   }\n}\n</script>\n\n<style scoped>\n.applications-page {\n  min-height: 100vh;\n  background-color: #f5f5f5;\n}\n\n.banner-img-wrapper {\n  position: relative;\n  width: 100%;\n  overflow: hidden;\n}\n\n.banner-img {\n  width: 100%;\n  height: 700px;\n  object-fit: cover;\n  display: block;\n}\n\n.banner-content {\n  position: absolute;\n  top: 0;\n  left: 0;\n  right: 0;\n  bottom: 0;\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  justify-content: center;\n  color: #fff;\n  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.36);\n  z-index: 2;\n  pointer-events: none;\n}\n\n.banner h1 {\n  font-size: 48px;\n  margin-bottom: 20px;\n  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);\n}\n\n.banner p {\n  font-size: 24px;\n  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);\n}\n\n.applications-section {\n  padding: 0 0 50px 0px;\n}\n\n.applications-grid-3 {\n  display: grid;\n  grid-template-columns: repeat(3, 1fr);\n  gap: 30px;\n  margin-top: 40px;\n}\n\n.application-card {\n  background: #eee;\n  border-radius: 8px;\n  padding: 0;\n  text-align: center;\n  transition: all 0.3s ease;\n  cursor: pointer;\n  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\n  background-size: cover;\n  background-position: center;\n  position: relative;\n  height: 320px;\n  display: flex;\n  align-items: flex-end;\n  overflow: hidden;\n}\n\n.application-card:hover {\n  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);\n  transform: translateY(-5px);\n}\n\n.card-overlay {\n  width: 100%;\n  height: 100%;\n  position: relative;\n}\n\n.application-card h3 {\n  margin: 0 0 10px 0;\n  width: 100%;\n  text-align: center;\n  position: absolute;\n  top: 32px;\n  left: 0;\n  color: #ffffff;\n}\n\n.application-card h6 {\n  margin: 0 0 10px 0;\n  width: 100%;\n  text-align: center;\n  position: absolute;\n  top: 50%;\n  left: 0;\n  transform: translateY(-50%);\n  color: #ffffff;\n}\n\n.application-card .btn {\n  position: absolute;\n  left: 50%;\n  bottom: 24px;\n  transform: translateX(-50%);\n}\n\n@media (max-width: 992px) {\n  .applications-grid-3 {\n    grid-template-columns: repeat(2, 1fr);\n  }\n}\n\n@media (max-width: 768px) {\n  .application-card {\n    height: 280px;\n  }\n\n  .application-card h3 {\n    font-size: 1.3rem;\n  }\n\n  .card-overlay {\n    padding: 15px;\n  }\n\n  .banner {\n    min-height: 120px;\n    height: 38vw;\n    max-height: 220px;\n  }\n}\n\n@media (max-width: 600px) {\n  .applications-grid-3 {\n    grid-template-columns: 1fr;\n  }\n\n  .application-card {\n    height: 220px;\n  }\n}\n/* 通用样式 */\n.section-line {\n  position: absolute;\n  bottom: -10px;\n  left: 50%;\n  transform: translateX(-50%);\n  width: 150px;\n  height: 2px;\n  background-color: rgb(255,0, 0);\n}\n</style>"],"mappings":";;EAEOA,KAAK,EAAC;AAAmB;;EAEvBA,KAAK,EAAC;AAAoB;;EAEzBA,KAAK,EAAC;AAAgB;;EANhCC,GAAA;EAaSD,KAAK,EAAC;;;EASJA,KAAK,EAAC;AAAW;;EACfA,KAAK,EAAC;AAAqB;mBAvBxC;;EA0BiBA,KAAK,EAAC;AAAc;mBA1BrC;;;uBAEEE,mBAAA,CAoCM,OApCNC,UAoCM,GAnCJC,mBAAA,eAAkB,EAClBC,mBAAA,CAMK,OANLC,UAMK,G,0BALJD,mBAAA,CAAiF;IAA5EE,GAAG,EAAC,uCAAuC;IAACC,GAAG,EAAC,MAAM;IAACR,KAAK,EAAC;+BAClEK,mBAAA,CAGM,OAHNI,UAGM,GAFJJ,mBAAA,CAA2B,YAAAK,gBAAA,CAApBC,QAAA,CAAAC,YAAY,kBACnBP,mBAAA,CAA0B,YAAAK,gBAAA,CAAnBC,QAAA,CAAAE,WAAW,iB,KAIrBT,mBAAA,WAAc,EAC0BU,IAAA,CAAAC,MAAM,CAACC,IAAI,wB,cAAnDd,mBAAA,CAqBM,OArBNe,UAqBM,G,0BApBJZ,mBAAA,CAOI;IAPCL,KAAK,EAAC;EAAgB,IAC3BK,mBAAA,CAEK;IAFDL,KAAK,EAAC;EAAoC,IAfpDkB,gBAAA,CAeqD,OAC7C,GAAAb,mBAAA,CAAkC;IAA5BL,KAAK,EAAC;EAAc,G,GAE5BK,mBAAA,CAEK;IAFDL,KAAK,EAAC;EAAoC,GAAC,mBAE/C,E,sBAEAK,mBAAA,CAWM,OAXNc,UAWM,GAVJd,mBAAA,CASM,OATNe,UASM,I,kBARJlB,mBAAA,CAOMmB,SAAA,QA/BhBC,WAAA,CAwB6BC,KAAA,CAAAC,YAAY,EAAnBC,GAAG;yBAAfvB,mBAAA,CAOM;MAP4BD,GAAG,EAAEwB,GAAG,CAACC,EAAE;MAAE1B,KAAK,EAAC,kBAAkB;MAAE2B,OAAK,EAAAC,MAAA,IAAEjB,QAAA,CAAAkB,eAAe,CAACJ,GAAG,CAACK,IAAI;MACrGC,KAAK,EAzBlBC,eAAA;QAAAC,eAAA,WAyBgDR,GAAG,CAACS,KAAK;MAAA;QAC7C7B,mBAAA,CAIM,OAJN8B,UAIM,GAHJ9B,mBAAA,CAAwB,YAAAK,gBAAA,CAAjBe,GAAG,CAACW,KAAK,kBAChB/B,mBAAA,CAAyB,YAAAK,gBAAA,CAAlBe,GAAG,CAACY,MAAM,kBAChBhC,mBAAA,CAAmF;MAA/EiC,IAAI,EAAEb,GAAG,CAACK,IAAI;MAAE9B,KAAK,EAAC,sCAAsC;MAAE2B,OAAK,EAAAY,MAAA,QAAAA,MAAA,MA7BtFC,cAAA,CA6BgF,QAAW;OAAC,IAAE,iBA7B9FC,UAAA,E,2BAAAC,UAAA;0CAAAtC,mBAAA,gBAoCIA,mBAAA,UAAa,EACbuC,YAAA,CAAeC,sBAAA,E","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}