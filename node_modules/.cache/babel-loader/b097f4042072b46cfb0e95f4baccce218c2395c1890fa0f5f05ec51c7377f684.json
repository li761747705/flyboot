isplay: flex;\n    flex-wrap: wrap;\n    overflow-x: auto;\n  }\n  \n  .category-item {\n    padding: 0.75rem 1rem;\n    border-left: none;\n    border-bottom: 2px solid transparent;\n    font-size: 0.9rem;\n    white-space: nowrap;\n  }\n  \n  .category-item.active {\n    border-left: none;\n    border-bottom: 2px solid var(--accent-color);\n  }\n  \n  .product-list {\n    padding: 1rem;\n    max-height: none;\n  }\n  \n  .products-grid {\n    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));\n    gap: 1rem;\n  }\n  \n  .accessories-grid {\n    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));\n  }\n  \n  .product-card {\n    padding: 1rem;\n  }\n  \n  .product-icon {\n    font-size: 1.5rem;\n    margin-bottom: 0.5rem;\n  }\n  \n  .product-name {\n    font-size: 0.8rem;\n  }\n  \n  .nav-link.active, .nav-link:hover {\n    border-bottom: none;\n    background-color: rgba(0, 0, 0, 0.05);\n    padding-left: 1.5rem;\n  }\n  \n  .navbar-collapse {\n    max-height: 80vh;\n    overflow-y: auto;\n    scrollbar-width: thin;\n    padding: 0.5rem 0;\n  }\n  \n  .navbar-collapse::-webkit-scrollbar {\n    width: 4px;\n  }\n  \n  .navbar-collapse::-webkit-scrollbar-thumb {\n    background: rgba(0, 0, 0, 0.2);\n    border-radius: 10px;\n  }\n  \n  /* 导航展开时将语言切换器放到顶部 */\n  .navbar-collapse.show ~ .d-flex .LanguageSwitcher {\n    display: none !important;\n  }\n}\n\n/* 移动端特别处理 */\n@media (max-width: 576px) {\n  .products-grid {\n    grid-template-columns: repeat(2, 1fr);\n  }\n  \n  .product-card {\n    padding: 0.75rem;\n  }\n  \n  .product-icon {\n    font-size: 1.25rem;\n  }\n}\n\n.navbar-toggler {\n  border: none;\n  padding: 0.5rem;\n  transition: all 0.3s ease;\n}\n\n.navbar-toggler:focus {\n  box-shadow: none;\n  outline: none;\n}\n\n.navbar-toggler-icon {\n  background-image: url(\"data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%280, 0, 0, 1%29' stroke-linecap='round' stroke-miterlimit='10' stro