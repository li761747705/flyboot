ter-link>\n                      <router-link class=\"product-card\" to=\"/products/accessories/antenna\">\n                        <div class=\"product-icon\"><i class=\"bi bi-reception-4\"></i></div>\n                        <div class=\"product-name\">{{ $t('products.accessories.antenna') }}</div>\n                      </router-link>\n                      <router-link class=\"product-card\" to=\"/products/accessories/flight-controller\">\n                        <div class=\"product-icon\"><i class=\"bi bi-motherboard\"></i></div>\n                        <div class=\"product-name\">{{ $t('products.accessories.flightController') }}</div>\n                      </router-link>\n                    </div>\n                  </transition>\n                </div>\n              </div>\n            </div>\n          </li>\n          \n          <li class=\"nav-item\">\n            <router-link class=\"nav-link\" to=\"/applications\">\n              {{ $t('common.applications') }}\n            </router-link>\n          </li>\n          \n          <li class=\"nav-item\">\n            <router-link class=\"nav-link\" to=\"/support\">\n              {{ $t('common.services') }}\n            </router-link>\n          </li>\n          \n          <li class=\"nav-item\">\n            <router-link class=\"nav-link\" to=\"/about/company\">\n              {{ $t('common.about') }}\n            </router-link>\n          </li>\n          \n          <li class=\"nav-item\">\n            <router-link class=\"nav-link\" to=\"/agent\">\n              <!-- <i class=\"bi bi-person-badge me-1\"></i>、 -->\n               {{ $t('nav.agent') }}\n            </router-link>\n          </li>\n        </ul>\n      </div>\n      \n      <div class=\"d-flex align-items-center\">\n        <LanguageSwitcher class=\"me-3\" />\n        <button class=\"navbar-toggler\" type=\"button\" data-bs-toggle=\"collapse\" data-bs-target=\"#mainNavbar\">\n          <span class=\"navbar-toggler-icon\"></span>\n  