{"ast":null,"code":"export default {\n  name: 'LanguageSwitcher',\n  computed: {\n    currentLocale() {\n      return this.$i18n.locale;\n    },\n    currentFlag() {\n      const flags = {\n        'zh': '🇨🇳',\n        'zh-hk': '🇭🇰',\n        'en': '🇺🇸',\n        'fr': '🇫🇷',\n        'es': '🇪🇸',\n        'hi': '🇮🇳',\n        'ru': '🇷🇺',\n        'pt': '🇧🇷',\n        'ar': '🇸🇦',\n        'bn': '🇧🇩'\n      };\n      return flags[this.currentLocale] || '🇨🇳';\n    }\n  },\n  methods: {\n    changeLanguage(lang) {\n      // 设置新的语言\n      this.$i18n.locale = lang;\n      // 保存到本地存储\n      localStorage.setItem('locale', lang);\n      console.log('切换语言到:', lang);\n\n      // 为阿拉伯语添加RTL方向\n      if (lang === 'ar') {\n        document.documentElement.setAttribute('dir', 'rtl');\n        document.documentElement.classList.add('rtl');\n      } else {\n        document.documentElement.setAttribute('dir', 'ltr');\n        document.documentElement.classList.remove('rtl');\n      }\n\n      // 重新加载页面应用新的语言设置\n      window.location.reload();\n    }\n  }\n};","map":{"version":3,"names":["name","computed","currentLocale","$i18n","locale","currentFlag","flags","methods","changeLanguage","lang","localStorage","setItem","console","log","document","documentElement","setAttribute","classList","add","remove","window","location","reload"],"sources":["C:\\Users\\75132\\Desktop\\flyboot\\flyboot\\src\\components\\LanguageSwitcher.vue"],"sourcesContent":["<template>\r\n  <div class=\"language-switcher\">\r\n    <div class=\"dropdown\">\r\n      <button class=\"btn btn-outline-light btn-sm dropdown-toggle d-flex align-items-center\" type=\"button\" id=\"languageDropdown\" data-bs-toggle=\"dropdown\" aria-expanded=\"false\">\r\n        <span class=\"flag-icon\">{{ currentFlag }}</span>\r\n        <span :class=\"['language-name', 'd-none', 'd-md-inline', $i18n.locale === 'ar' ? 'me-1' : 'ms-1']\">{{ $t(`name`) }}</span>\r\n      </button>\r\n      <ul class=\"dropdown-menu dropdown-menu-end language-menu\" aria-labelledby=\"languageDropdown\">\r\n        <!-- 中文简体 -->\r\n        <li><a class=\"dropdown-item\" href=\"#\" @click.prevent=\"changeLanguage('zh')\" :class=\"{ active: currentLocale === 'zh' }\">\r\n          🇨🇳 简体中文\r\n        </a></li>\r\n        \r\n        <!-- 中文繁体 -->\r\n        <li><a class=\"dropdown-item\" href=\"#\" @click.prevent=\"changeLanguage('zh-hk')\" :class=\"{ active: currentLocale === 'zh-hk' }\">\r\n          🇭🇰 繁體中文\r\n        </a></li>\r\n        \r\n        <!-- 英文 -->\r\n        <li><a class=\"dropdown-item\" href=\"#\" @click.prevent=\"changeLanguage('en')\" :class=\"{ active: currentLocale === 'en' }\">\r\n          🇺🇸 English\r\n        </a></li>\r\n        \r\n        <!-- 法语 -->\r\n        <li><a class=\"dropdown-item\" href=\"#\" @click.prevent=\"changeLanguage('fr')\" :class=\"{ active: currentLocale === 'fr' }\">\r\n          🇫🇷 Français\r\n        </a></li>\r\n        \r\n        <!-- 西班牙语 -->\r\n        <li><a class=\"dropdown-item\" href=\"#\" @click.prevent=\"changeLanguage('es')\" :class=\"{ active: currentLocale === 'es' }\">\r\n          🇪🇸 Español\r\n        </a></li>\r\n        \r\n        <!-- 印地语 -->\r\n        <li><a class=\"dropdown-item\" href=\"#\" @click.prevent=\"changeLanguage('hi')\" :class=\"{ active: currentLocale === 'hi' }\">\r\n          🇮🇳 हिन्दी\r\n        </a></li>\r\n        \r\n        <!-- 俄语 -->\r\n        <li><a class=\"dropdown-item\" href=\"#\" @click.prevent=\"changeLanguage('ru')\" :class=\"{ active: currentLocale === 'ru' }\">\r\n          🇷🇺 Русский\r\n        </a></li>\r\n        \r\n        <!-- 葡萄牙语 -->\r\n        <li><a class=\"dropdown-item\" href=\"#\" @click.prevent=\"changeLanguage('pt')\" :class=\"{ active: currentLocale === 'pt' }\">\r\n          🇧🇷 Português\r\n        </a></li>\r\n        \r\n        <!-- 阿拉伯语 -->\r\n        <li><a class=\"dropdown-item\" href=\"#\" @click.prevent=\"changeLanguage('ar')\" :class=\"{ active: currentLocale === 'ar' }\">\r\n          🇸🇦 العربية\r\n        </a></li>\r\n        \r\n        <!-- 孟加拉语 -->\r\n        <li><a class=\"dropdown-item\" href=\"#\" @click.prevent=\"changeLanguage('bn')\" :class=\"{ active: currentLocale === 'bn' }\">\r\n          🇧🇩 বাংলা\r\n        </a></li>\r\n      </ul>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'LanguageSwitcher',\r\n  computed: {\r\n    currentLocale() {\r\n      return this.$i18n.locale;\r\n    },\r\n    currentFlag() {\r\n      const flags = {\r\n        'zh': '🇨🇳',\r\n        'zh-hk': '🇭🇰',\r\n        'en': '🇺🇸',\r\n        'fr': '🇫🇷',\r\n        'es': '🇪🇸',\r\n        'hi': '🇮🇳',\r\n        'ru': '🇷🇺',\r\n        'pt': '🇧🇷',\r\n        'ar': '🇸🇦',\r\n        'bn': '🇧🇩'\r\n      };\r\n      return flags[this.currentLocale] || '🇨🇳';\r\n    }\r\n  },\r\n  methods: {\r\n    changeLanguage(lang) {\r\n      // 设置新的语言\r\n      this.$i18n.locale = lang;\r\n      // 保存到本地存储\r\n      localStorage.setItem('locale', lang);\r\n      console.log('切换语言到:', lang);\r\n      \r\n      // 为阿拉伯语添加RTL方向\r\n      if (lang === 'ar') {\r\n        document.documentElement.setAttribute('dir', 'rtl');\r\n        document.documentElement.classList.add('rtl');\r\n      } else {\r\n        document.documentElement.setAttribute('dir', 'ltr');\r\n        document.documentElement.classList.remove('rtl');\r\n      }\r\n      \r\n      // 重新加载页面应用新的语言设置\r\n      window.location.reload();\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.language-switcher {\r\n  display: inline-block;\r\n}\r\n\r\n.language-menu {\r\n  max-height: 300px;\r\n  overflow-y: auto;\r\n  scrollbar-width: thin;\r\n}\r\n\r\n.language-menu::-webkit-scrollbar {\r\n  width: 4px;\r\n}\r\n\r\n.language-menu::-webkit-scrollbar-thumb {\r\n  background: rgba(0, 0, 0, 0.2);\r\n  border-radius: 10px;\r\n}\r\n\r\n.dropdown-item {\r\n  cursor: pointer;\r\n  display: flex;\r\n  align-items: center;\r\n  gap: 8px;\r\n  padding: 8px 16px;\r\n}\r\n\r\n.dropdown-item.active